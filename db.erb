;
$TTL	1800
@	IN	SOA	<%= soa %>. root.<%= soa %>. (
			      1		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			  3600 )	; Negative Cache TTL
;
@	IN	NS	ns

ns	IN	A	<%= ns %>

www	IN	A	192.168.1.1
	IN	AAAA	ff02::1

	IN	MX	10	mail

mail	IN	A	192.168.1.2

<% for name in $namelist do -%>
<% if /#{zonename}$/ =~ name.chomp -%>
<% label = name.chomp.sub(/\.#{zonename}$/, "") -%>
<%  if !(/\./ =~ label) %>
<%= label %> IN A 192.168.1.<%= rand(254) %>
<%  end -%>
<% end -%>
<% end -%>
